@{
    Layout = null;

}

<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="initial-scale=1.0,maximum-scale=1.0,user-scalable=no">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <!-- Remove Tap Highlight on Windows Phone IE -->
    <meta name="msapplication-tap-highlight" content="no" />
    <link rel="icon" type="image/png" href="~/assets/img/favicon-16x16.png" sizes="16x16">
    <link rel="icon" type="image/png" href="~/assets/img/favicon-32x32.png" sizes="32x32">
    <title>Welcome</title>
    <!-- additional styles for plugins -->

    <link href="~/assets/css/uikit.almost-flat.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/assets/css/main.min.css" media="all">
    <link href="~/assets/css/modify.css" rel="stylesheet" />
    <link href="~/assets/css/modify-font.css" rel="stylesheet" />

    <!-- common functions -->
    <script src="~/assets/js/common.min.js"></script>

</head>
<body class="sidebar_mini">
    <!-- main header -->
    <header id="header_main">
        <div class="header_main_content">
            <nav class="uk-navbar">
                <div class="logo-innowi"><a href="/Home">Digital APP</a></div>

                <div class="uk-navbar-flip">
                    <ul class="uk-navbar-nav user_actions">
                        <li data-uk-dropdown="{mode:'click',pos:'bottom-right'}">
                            <a href="#" class="user_action_image" id="btnLogout">Logout</a>
                        </li>
                    </ul>
                </div>
            </nav>
        </div>
    </header>

    <aside id="sidebar_main">
        <div class="menu_section">

        </div>
    </aside>

    <div id="page_content">
        <div id="page_content_inner">
            @RenderBody()
        </div>
    </div>


    <script src="~/Scripts/CustomFile/JqueryUIBlock.js"></script>
    <script src="~/Scripts/CustomFile/metronic.js"></script>
    <script src="~/Scripts/CustomFile/BlockUnBlock.js"></script>
    <script src="~/Scripts/CustomFile/toastr.js"></script>

    <script>
        $(document).ready(function () {

        });
        $("#btnLogout").click(function () {
            $.ajax({
                type: "Get",
                dataType: 'json',
                contentType: "application/json",
                url: '/Home/Logout',
                data: {},
                success: LogoutSuccess,
                error: LogoutError
            });

        });

        function LogoutSuccess() {
            debugger
            window.location.href = "/Login";
        }

        function LogoutError() {
            window.location.href = "/Login";
        }

    </script>
</body>
</html>
